<?xml version='1.0' encoding='UTF-8'?>
    <!DOCTYPE hibernate-configuration PUBLIC
              "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
              "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hbm2ddl.auto">update</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/wv-eventing?currentSchema=sensorweb2</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">postgres</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>

        <mapping resource="/hibernate/user.hbm.xml"/>
        <mapping resource="/hibernate/group.hbm.xml"/>

<!--        <mapping resource="/hibernate/event.hbm.xml"/>
        <mapping resource="/hibernate/series.hbm.xml"/>
        <mapping resource="/hibernate/trend.hbm.xml"/>
        <mapping resource="/hibernate/feature.hbm.xml"/>
        <mapping resource="/hibernate/subscription.hbm.xml"/>
        <mapping resource="/hibernate/rule.hbm.xml"/>-->

    </session-factory>
</hibernate-configuration>
