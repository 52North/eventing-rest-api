<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.eventing.wv.model.WvEvent" table="event" mutable="true">
        <meta attribute="class-description">
            This class contains the event details.
        </meta>
        <id name="id" type="int" column="pkid">
            <generator class="sequence"/>
        </id>
        <many-to-one name="rule" class="org.n52.eventing.wv.model.Rule" foreign-key="rule_pkid">
            <column name="rule_pkid">
                <comment>Relation/foreign key to the rule</comment>
            </column>
        </many-to-one>
        <property name="timestamp" column="time_stamp" type="timestamp"/>
        <property name="value" column="numeric_value" type="double"/>
        <property name="previousTimestamp" column="previous_time_stamp" type="timestamp"/>
        <property name="previousValue" column="previous_numeric_value" type="double"/>
    </class>
</hibernate-mapping>
