<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:ctx="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <mvc:annotation-driven />
    <ctx:annotation-config />

    <bean class="org.n52.eventing.rest.publications.DummyPublicationsDao" name="publicationsDao" />
    <bean class="org.n52.eventing.rest.users.DummyUsersDao" name="usersDao" />
    <bean class="org.n52.eventing.rest.deliverymethods.DummyDeliveryMethodsDao" name="deliveryMethodsDao" />
    <bean class="org.n52.eventing.rest.templates.DummyTemplatesDao" name="templatesDao" />
    <bean class="org.n52.eventing.rest.subscriptions.SubscriptionManagerImpl" name="subscriptionManager" />
    <bean class="org.n52.eventing.rest.subscriptions.DummySubscriptionsDao">
        <constructor-arg index="0" ref="usersDao"/>
        <constructor-arg index="1" ref="publicationsDao"/>
        <constructor-arg index="2" ref="deliveryMethodsDao"/>
        <constructor-arg index="3" ref="templatesDao"/>
    </bean>

</beans>
